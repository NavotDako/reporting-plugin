<idea-plugin version="2">
  <id>com.nvtd</id>
  <name>Reporting Plugin</name>
  <version>1.0</version>
  <vendor email="navot@experitest.com" url="http://www.navotdako.com">NVTD</vendor>

  <description><![CDATA[
      We Do Not Need A Description.<br>
      <em>We Do Not Need HTML As Well</em>
    ]]></description>

  <change-notes><![CDATA[
      We Have no notes here.<br>
      <em>HTML!!</em>
    ]]>
  </change-notes>

  <idea-version since-build="141.0"/>
  <extensions defaultExtensionNs="com.intellij">
